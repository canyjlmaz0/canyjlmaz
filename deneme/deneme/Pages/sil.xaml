<UserControl x:Class="deneme.Pages.sil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" Margin="0,30" Grid.Row="0">silmek istediğiniz araç seri numarasını girin</Label>
        <TextBox Name="txtsil" Grid.Row="1" Margin="60" FontSize="30" Background="Gray"></TextBox>
        <Button Background="red" Margin="40" Grid.Row="2"> SİLME İŞLEMİNİ TAMAMLA</Button>
    </Grid>
</UserControl>
